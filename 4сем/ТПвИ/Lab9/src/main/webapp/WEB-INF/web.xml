<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Task 5 -->
    <display-name>Сервлетный фильтр</display-name>
    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>com.example.lab9.Task5.RegisterFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>RegisterFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>




    <servlet>
        <servlet-name>ParamServlet</servlet-name>
        <servlet-class>com.example.lab9.Task8.ParamServlet</servlet-class>

        <init-param>
            <param-name>message</param-name>
            <param-value>Servlet parameter</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>ParamServlet</servlet-name>
        <url-pattern>/param-servlet</url-pattern>
    </servlet-mapping>


    <display-name>Welcome to Glassfish</display-name>
    <description>Welcome to Glassfish</description>
    <filter>
        <filter-name>LoggingFilter</filter-name>
        <filter-class>com.example.lab9.Task5.LoggingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoggingFilter</filter-name>
        <url-pattern>/logging.jsp</url-pattern>
    </filter-mapping>

    <display-name>Сервлетный фильтр (лаба 10)</display-name>
    <filter>
        <filter-name>NewSignUpFilter</filter-name>
        <filter-class>com.example.lab9.Lab10_servlets.NewSignUpFilter</filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>NewSignUpFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>